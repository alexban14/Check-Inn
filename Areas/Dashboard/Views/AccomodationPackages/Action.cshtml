@model Check_Inn.Areas.Dashboard.ViewModels.AccomodationPackageActionModel

@{
    ViewBag.Title = "Action";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
@if (Model != null)
{
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="text-md my-3" id="exampleModalLabel">
                @if (Model.ID > 0)
                {
                    <span>Edit Accomodation Type</span>
                }
                else
                {
                    <span>Create Accomodation Type</span>
                }
            </h1>
        </div>

        <div class="error-wrapper">

        </div>

        <form id="actionForm">
            <input type="hidden" name="ID" value="@Model.ID" />
            <div class="form-floating mb-3">
                <input type="text" class="form-control" name="Name" id="name" placeholder="Enter Accomodation Type Name" value="@Model.Name">
                <label class="form-label" for="name">Name</label>
            </div>
            <div class="mb-3">
                <!--<lable class="form-label" for="AccomodationTypeID">Select Accomodation Type</lable>-->
                <select class="form-select" name="AccomodationTypeID" id="AccomodationTypeID">
                    <option>Select an Accomodation Type</option>
                    @if (Model.AccomodationTypes != null)
                    {
                        foreach (var accomodationType in Model.AccomodationTypes)
                        {
                            <option value="@accomodationType.ID">
                                @accomodationType.Name
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="form-floating mb-3">
                <input type="number" class="form-control" name="NoOfRoom" id="NoOfRoom" placeholder="Enter Accomodation Type Name" value="@Model.NoOfRoom">
                <label class="form-label">Room Number</label>
            </div>
            <div class="form-floating mb-3">
                <input type="number" class="form-control" name="FeePerNight" id="FeePerNight" placeholder="Enter Accomodation Type Name" value="@Model.FeePerNight">
                <label for="description">Fee per night</label>
            </div>
            <button id="actionButton" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk me-1"></i> Save changes
            </button>
        </form>

    </div>
}

<script>
    document.getElementById("actionButton").addEventListener("click", function () {
        console.log("create button clicked")
        var form = document.getElementById("actionForm");
        var formData = new FormData(form);

        var xhr = new XMLHttpRequest();
        xhr.open("POST", "@Url.Action("Action", "AccomodationPackages")", true);

        // Set up an event handler to handle the response
        xhr.onreadystatechange = function () {
            console.log(xhr.status, xhr.readyState);
            if (xhr.readyState === 4) {
                if (xhr.status === 200)
                {
                    // Response received successfully
                    var response = JSON.parse(xhr.responseText);
                    if (response.Success)
                    {
                        location.href = "@Url.Action("Index", "AccomodationPackages")";
                    }
                    else
                    {
                        var errorDiv = document.querySelector(".error-wrapper");
                        errorDiv.innerHTML = response.Message;
                    }
                }
            }
        };

        xhr.setRequestHeader('X-Requested-With', 'XMLHttpRequest');

        xhr.send(formData);
    });
</script>

