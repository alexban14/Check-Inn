@model Check_Inn.Areas.Dashboard.ViewModels.AccomodationTypeActionModel

@if (Model != null)
{
    <div class="container">
        <div>
            <h1 class="modal-title fs-5" id="exampleModalLabel">
                @if(Model.ID > 0)
                {
                    <span>Edit Accomodation Type</span>
                }
                else
                {
                    <span>Create Accomodation Type</span>
                }
            </h1>
        </div>

        <div class="error-wrapper">

        </div>

        <form id="actionForm">
            <input type="hidden" name="ID" value="@Model.ID" />
            <div class="form-floating mb-3">
                <input type="text" class="form-control" name="Name" id="name" placeholder="Enter Accomodation Type Name" value="@Model.Name">
                <label class="form-label">Name</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Enter Accomodation Type Description" name="Description" id="description" style="height: 100px">@Model.Description</textarea>
                <label for="description">Description</label>
            </div>

        </form>
        <button id="actionButton" class="btn btn-primary">
            <i class="fa-solid fa-floppy-disk me-1"></i> Save changes
        </button>

    </div>
}

<script>
    document.getElementById("actionButton").addEventListener("click", function () {
        console.log("create button clicked")
        var form = document.getElementById("actionForm");
        var formData = new FormData(form);

        var xhr = new XMLHttpRequest();
        xhr.open("POST", "@Url.Action("Action", "AccomodationTypes")", true);

        // Set up an event handler to handle the response
        xhr.onreadystatechange = function () {
            console.log(xhr.status, xhr.readyState);
            if (xhr.readyState === 4) {
                if (xhr.status === 200)
                {
                    // Response received successfully
                    var response = JSON.parse(xhr.responseText);
                    if (response.Success)
                    {
                        location.href = "@Url.Action("Index", "AccomodationTypes")";
                    }
                    else
                    {
                        var errorDiv = document.querySelector(".error-wrapper");
                        errorDiv.innerHTML = response.Message;
                    }
                }
            }
        };

        xhr.setRequestHeader('X-Requested-With', 'XMLHttpRequest');

        xhr.send(formData);
    });
</script>
