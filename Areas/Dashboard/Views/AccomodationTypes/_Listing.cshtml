@model Check_Inn.Areas.Dashboard.ViewModels.AccomodationTypesListingModel

@if (Model != null && Model.AccomodationTypes.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Check_Inn.Entities.AccomodationType accomodationType in Model.AccomodationTypes)
            {
                <tr>
                    <td>
                        @accomodationType.Name
                    </td>
                    <td>
                        @accomodationType.Description
                    </td>
                    <td>
                        <a href="@Url.Action("Action", "AccomodationTypes", new { ID = accomodationType.ID })" id="editButton" type="button" class="btn btn-success"> 
                            <i class="fa-solid fa-pen me-1"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", "AccomodationTypes", new { ID = accomodationType.ID })" type="button" class="btn btn-danger">
                            <i class="fa-solid fa-trash me-1"></i> Delete
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        There are no records!
    </div>
}
