@model Check_Inn.Areas.Dashboard.ViewModels.AccomodationTypesListingModel

@if (Model != null && Model.AccomodationTypes.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Check_Inn.Entities.AccomodationType accomodationType in Model.AccomodationTypes)
            {
                <tr>
                    <td>
                        @accomodationType.Name
                    </td>
                    <td>
                        @accomodationType.Description
                    </td>
                    <td>
                        <button type="button" class="btn btn-success">Edit</button>
                        <button type="button" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        There are no records!
    </div>
}
