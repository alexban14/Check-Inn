@model Check_Inn.Areas.Dashboard.ViewModels.RolesListingModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col col-lg-12">
        <h2>Roles</h2>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col col-lg-12">
        <form>
            <div class="input-group">
                <input type="text" name="searchterm" class="form-control" placeholder="Search" value="@Model.SearchTerm" />
                <button class="btn btn-outline-primary" type="submit">
                    <i class="fa-solid fa-magnifying-glass me-1"></i> Search
                </button>
                <a href="@Url.Action("Index", "Roles")" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-rotate-right me-1"></i> Reset
                </a>
                <a href="@Url.Action("Action", "Roles")" id="createButton" class="btn btn-outline-success" type="button">
                    <i class="fa-solid fa-plus me-1"></i> Create
                </a>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col col-lg-12">
        @{ Html.RenderPartial("_Listing", Model); }
    </div>
</div>
