@model Check_Inn.ViewModels.PaymentViewModel
@{
    ViewBag.Title = "Payment Successful";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="site-hero overlay" style="background-image: url(/Content/images/hero_bg_3.jpg);" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row site-hero-inner justify-content-center align-items-center">
            <div class="col-md-10 text-center" data-aos="fade-up">
                <h1 class="heading">Payment Successful</h1>
                <p class="lead">Your booking has been confirmed!</p>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-5">
                        <div class="text-center mb-5">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#28a745" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                            </svg>
                            <h2 class="mt-3 mb-2">Thank You, @Model.GuestName!</h2>
                            <p class="text-muted">Your payment was processed successfully.</p>
                        </div>

                        <div class="booking-summary mb-5">
                            <h4 class="mb-4 text-center">Booking Details</h4>
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <th scope="row">Booking Reference</th>
                                            <td>@Model.BookingReference</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Accommodation</th>
                                            <td>@Model.AccomodationName (@Model.AccomodationPackageName)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Check-in Date</th>
                                            <td>@Model.CheckInDate.ToString("dddd, MMMM dd, yyyy")</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Check-out Date</th>
                                            <td>@Model.CheckOutDate.ToString("dddd, MMMM dd, yyyy")</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Duration</th>
                                            <td>@Model.Duration night(s)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Guests</th>
                                            <td>@Model.NoOfAdults Adult(s), @Model.NoOfChildren Children</td>
                                        </tr>
                                        <tr class="table-active">
                                            <th scope="row">Total Paid</th>
                                            <td><strong>$@Model.TotalAmount.ToString("F2")</strong></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="confirmation-email mb-4">
                            <div class="alert alert-info">
                                <h5 class="alert-heading">Confirmation Sent</h5>
                                <p>A confirmation email has been sent to <strong>@Model.Email</strong> with your booking details.</p>
                            </div>
                        </div>

                        <div class="whats-next mt-5">
                            <h4 class="mb-3">What's Next?</h4>
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#4a90e2" class="bi bi-info-circle-fill" viewBox="0 0 16 16">
                                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                                    </svg>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <p>You'll receive a reminder email 3 days before your check-in date. Our front desk team will be ready to welcome you upon arrival.</p>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-5">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary px-4">Back to Home</a>
                            <a href="#" class="btn btn-outline-secondary px-4 ms-2">Print Confirmation</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
